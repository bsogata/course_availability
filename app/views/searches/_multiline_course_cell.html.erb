<% if !field.nil? %> 
  <% if field.include?("\n") %>
    <%= highlight(field[0 ... field.index("\n")], @search_term.split(" ")) %><br />
    <%= highlight(field[field.index("\n") + 1 ... field.length], @search_term.split(" ")) %>
  <% else %>
    <%= highlight(field, @search_term.split(" ")) %>
  <% end %>
<% end %>